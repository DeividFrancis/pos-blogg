{
  "compilerOptions": {
    "noEmit": true,
    "module": "commonjs",
    "target": "esnext",
    "lib": ["esnext"],
    "skipLibCheck": true,
    "strict": true,
    "sourceMap": true,
    "outDir": "dist",
    "resolveJsonModule": true,
    "esModuleInterop": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "./**/*.spec.ts"]
}
